<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   >
    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/ic_app_background">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="40dp"
                android:layout_marginStart="10dp"
                android:text="Sign Up"
                android:textSize="70sp"
                android:fontFamily="@font/suez_one_regular"
                android:textColor="@color/white"/>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="200dp"
            android:gravity="center"
            android:orientation="horizontal">


            <EditText
                android:id="@+id/register_field_Fname"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:background="@drawable/input_bg"
                android:drawableStart="@drawable/ic_person"
                android:drawablePadding="10dp"
                android:fontFamily="@font/thin"
                android:hint="Full Name"
                android:inputType="textPersonName"
                android:paddingStart="20dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="10dp"
                android:textColorHint="@color/white"
                android:textSize="22dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/register_field_email"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:background="@drawable/input_bg"
                android:drawableStart="@drawable/ic_email"
                android:drawablePadding="10dp"
                android:ems="10"
                android:fontFamily="@font/thin"
                android:hint="Email"
                android:inputType="textPersonName"
                android:paddingStart="20dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="10dp"
                android:textColorHint="@color/white"
                android:textSize="22dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/register_field_Password"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="140dp"
                android:background="@drawable/input_bg"
                android:drawableStart="@drawable/ic_lock"
                android:drawablePadding="10dp"
                android:fontFamily="@font/thin"
                android:hint="Password"
                android:inputType="textPassword"
                android:paddingStart="20dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="10dp"
                android:textColorHint="@color/white"
                android:textSize="22dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/register_field_com_Password"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="210dp"
                android:autofillHints=""
                android:background="@drawable/input_bg"
                android:drawableStart="@drawable/ic_lock"
                android:drawablePadding="10dp"
                android:fontFamily="@font/thin"
                android:hint="Confirm Password"
                android:inputType="textPassword"
                android:paddingStart="20dp"
                android:paddingLeft="10dp"
                android:paddingTop="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="10dp"
                android:textColorHint="@color/white"
                android:textSize="22dp"
                android:textStyle="bold" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_marginTop="680dp"
            android:id="@+id/gender_layout"
            >


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_below="@+id/details">


            <Button
                android:layout_marginTop="30dp"
                android:id="@+id/reg_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_background"
                android:fontFamily="@font/suez_one_regular"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="SignUp"
                android:textAllCaps="false"
                android:textSize="22dp" />

        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>
